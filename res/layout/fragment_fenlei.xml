<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/zuoicon" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ececec"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fragment_fenlei_sousuo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:padding="2dp"
                android:src="@drawable/sousuo" />

            <EditText
                 android:id="@+id/fragment_fenlei_et"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:hint="请输入关键字或商品编号检索"
                android:padding="7dp"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ececec"
                android:gravity="center"
                android:padding="7dp"
                android:text="热门推荐" />

            <ImageView
                android:id="@+id/fragment_fenlei_tuijian"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@drawable/tuijian" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="#Eaeaea" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fragment_fenlei_yudong"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/yundong" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_huwai"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/huwai" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_nvxie"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/nvxie" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#eaeaea" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fragment_fenlei_nanxie"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/nanxie" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_nanzhuang"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/nanzhuang" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_nvzhuang"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/nvzhuang" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#eaeaea" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/fragment_fenlei_tongz"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/tongz" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_xiangb"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/xiangb" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="fill_parent"
                    android:background="#Eaeaea" />

                <ImageView
                    android:id="@+id/fragment_fenlei_jiaju"
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:src="@drawable/jiaju" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#eaeaea" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>